{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "types": ["react", "mobx", "node", "jest"],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2020"],
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
  ]
}
